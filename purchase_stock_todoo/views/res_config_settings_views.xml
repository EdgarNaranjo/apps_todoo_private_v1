<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_purchase_stock" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.purchase.stock</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='invoicing_settings_container']" position="after">
                    <h2>New purchase orders</h2>
                    <div class="row mt16 o_settings_container" name="generic_data_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="generic_options" title="Options">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="check_options"/>
                                <a href="https://www.odoo.com/documentation/17.0/es/applications/inventory_and_mrp/purchase.html" title="Doc." class="o_doc_link" target="_blank"></a>
                                <div class="text-muted">
                                    It is defined in which models we want the behavior
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="check_options" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
