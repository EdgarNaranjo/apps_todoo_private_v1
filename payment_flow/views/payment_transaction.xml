<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="transaction_form_flow" model="ir.ui.view">
        <field name="name">transaction.form.flow</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.payment_transaction_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_void']" position="before">
                <button attrs="{'invisible': ['|', ('provider_code', '!=', 'flow'), ('state', '!=', 'draft')]}"
                        name="flow_getTransactionfromCommerceId"
                        string="Obtener Datos usando CommerceID"
                        type="object"/>
            </xpath>

            <xpath expr="//field[@name='provider_reference']" position="after">
                <field attrs="{'invisible': [('provider_code', '!=', 'flow')]}" name="flow_token"/>
                <field attrs="{'invisible': [('provider_code', '!=', 'flow')]}" name="fees"/>
            </xpath>
        </field>
    </record>
</odoo>
