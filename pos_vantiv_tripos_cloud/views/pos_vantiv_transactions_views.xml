<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="view_pos_vantiv_tripos_cloud_transaction_tree" model="ir.ui.view">
            <field name="name">triPOS Cloud Configurations</field>
            <field name="model">pos_vantiv_tripos_cloud.transaction</field>
            <field name="arch" type="xml">
                <tree string="Transactions">
                    <field name="order_name" />
                    <field name="transaction_amount" />
                    <field name="transaction_status" />
                    <field name="lane_id" />
                </tree>
            </field>
        </record>


        <record id="action_transaction_form" model="ir.actions.act_window">
            <field name="name">triPOS Cloud Transactions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos_vantiv_tripos_cloud.transaction</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"> :)
                </p>
            </field>
        </record>


    </data>
</odoo>
