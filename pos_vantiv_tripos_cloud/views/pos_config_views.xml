<?xml version="1.0"?>
<odoo>

    <record id="res_config_view_form_inherit_vantiv" model="ir.ui.view">
        <field name="name">res.config.form.inherit.vantiv</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="pos_payment_terminals_section" position="inside">
                <setting id="tripos_cloud_payment_terminal_setting" title="The transactions are processed by Tripos Cloud Vantiv. Set your Tripos Cloud Vantiv credentials on the related payment method." string="Tripos Vantiv" help="Accept payments with an Tripos Cloud Vantiv payment terminal">
                    <field name="module_pos_vantiv_tripos_cloud"/>
                    <div class="content-group" invisible="not module_pos_vantiv_tripos_cloud">
                        <div class="mt16">
                            <!-- <button name="%(pos_mercury.action_configuration_form)d" icon="oi-arrow-right" type="action" string="Vantiv Accounts" class="btn-link"/> -->
                        </div>
                    </div>
                </setting>
            </block>
        </field>
    </record>

    <record id="pos_config_view_form_inherit_vantiv" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.vantiv</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="before">
                <field name="show_is_lane" invisible="1"/>
            </xpath>
            <xpath expr="//div[@id='restaurant_on_create']" position="after">
                <div class="row mt16 o_settings_container" invisible="show_is_lane == False">
                    <setting id="vantiv_tripos_cloud">
                        <field name="is_lane" string="Vantiv Tripos Cloud Lane"/>
                        <div class="content-group mt16" invisible="not is_lane">
                            <div class="text-warning" id="warning_text_employees">
                                Vantiv Lanes available
                            </div>
                            <field name="lane_id" colspan="4" nolabel="0" />
                        </div>
                    </setting>
                </div></xpath>
        </field>
    </record>

</odoo>
