<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_supplier_filter_print_inner">
			<t t-call="web.external_layout">
				<t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
				<div class="page">
					<div class="oe_structure" />
					<div class="row">
						<div class="text-right" style="margin-right: 15em;">
								<p><span t-esc="doc.partner_id.name" /><br/>
								<span t-esc="doc.partner_id.street" /><br/>
								<span t-esc="doc.partner_id.street2" /><br/>
								<span t-esc="doc.partner_id.city" />
								<span t-esc="doc.partner_id.state_id.name" />
								<span t-esc="doc.partner_id.zip" /><br/>
								<span t-esc="doc.partner_id.country_id.name" />
							</p>
							<br/>
						</div>
						<t t-set="i" t-value="0.0" />
						<t t-set="j" t-value="0.0" />
						<t t-set="k" t-value="0.0" />
						<t t-foreach="doc.supplier_filters_ids" t-as="line">
								<t t-set="i" t-value="i+ line.amount_total_signed" />
								<t t-set="j" t-value="j+line.credit_amount" />
								<t t-set="k" t-value="k+line.result" />
						</t>
						<table class="table table-condensed">
							<thead>
								<tr class="text-center">
									<th>Date</th>
									<th>Invoice Number</th>
									<th>Account</th>
									<th>Ref</th>
									<th>Invoices/Credit</th>
									<th>Payments/Debit</th>
									<th>Balance</th>
								</tr>
							</thead>
							<tbody>
								<tr>
                                    <td></td>
                                    <td>
                                    	<b>Initial Balance</b>
                                    </td>
                                    <td>
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td class="text-right">
                                        <b><span t-esc="0.0" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></b>
                                    </td>

                                </tr>
                                <t t-set="grand_total" t-value="0.0" />
                              	<t t-set="bal" t-value="0.0" />
                               	<t t-set="sub_total" t-value="0.0" />
								<tr t-foreach="doc.supplier_filters_ids" t-as="line">
									<t t-set="bal" t-value="bal +sub_total "/>
										<td>
											<span t-esc="line.date_invoice" />
										</td>
										<td>
											<span t-esc="line.number" />
										</td>
										<td>
											<span t-esc="line.account_id.code" />
										</td>
										<td>
											<span t-esc="line.name" />
										</td>
										<td class="text-right">
											<span t-esc="line.amount_total_signed"
												t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
										</td>
										<td class="text-right">
											<span t-esc="line.credit_amount"
												t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
										</td>
										<td class="text-right">
											<t t-set="sub_total" t-value="line.amount_total_signed-line.credit_amount" />
                                         	<t t-set="grand_total" t-value="sub_total + bal"/>
											<span t-esc="sub_total + bal"
												t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
										</td>
								</tr>
								<tr>
                                    <td></td>
                                    <td>
                                    	<b>Ending Balance</b>
                                    </td>
                                    <td>

                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td class="text-right">
                                        <b><span t-field="doc.payment_amount_due_amt_supplier"
												t-options='{"widget": "monetary", "display_currency": res_company.currency_id}' /></b>
                                    </td>
                                </tr>
								<tr>
									<td class="text-right">
									</td>
									<td>
									</td>
									<td>
									</td>
									<td></td>
									<td class="text-right">
										<span t-esc="i" />
									</td>
									<td class="text-right">
										<span t-esc="j" />
									</td>
									<td class="text-right">
										<span t-esc="k" />
									</td>
								</tr>
							</tbody>
						</table>
						<div class="row" name="total">
							<div class="col-xs-5 pull-right">
								<table class="table table-condensed">
									<tr class="border-black">
										<td>
											<strong>Total Amount OverDue :</strong>
										</td>
										<td class="text-right">
											<span t-field="doc.payment_amount_overdue_amt_supplier"
												t-options='{"widget": "monetary", "display_currency": res_company.currency_id}' />
										</td>
									</tr>
									<tr class="border-black">
										<td>
											<strong>Balance Due :</strong>
										</td>
										<td class="text-right">
											<span t-field="doc.payment_amount_due_amt_supplier"
												t-options='{"widget": "monetary", "display_currency": res_company.currency_id}' />
										</td>
									</tr>
								</table>
							</div>
						</div>
					</div>
				</div>
			</t>
		</template>


		<template id="report_supplier_statement_wizard">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-call="account_statement_todoo.report_supplier_filter_print_inner" t-lang="doc.partner_id.lang" />
				</t>
			</t>
		</template>
	</data>
</odoo>
