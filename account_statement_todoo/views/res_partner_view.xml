<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Wizard View Form Update Picking -->
        <record model="ir.ui.view" id="customer_model_wizard_form">
            <field name="name">Print Statement</field>
            <field name="model">customer.model.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="start_date" required='True'/>
                            <field name="state_invoice"/>
                        </group>
						<group>
                            <field name="end_date" required='True'/>
                        </group>
						<group>
							<field name="invoice_filters_ids" invisible="1"/>
							<field name="supplier_filters_ids" invisible="1"/>
							<field name="partner_id" invisible="1"/>
							<field name="amount_total" readonly="1"/>
						</group>
                    </group>
                    <footer>
                        <button type="object" name="action_print_customer_pdf" string="Download" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

		<record id="account_invoice_extend_form" model="ir.ui.view">
			<field name="name">account.invoice.extend.form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_supplier_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='residual']" position="after">
					<field name="credit_amount" invisible="1" />
					<field name="result" invisible="1" />
				</xpath>
			</field>
		</record>
		
		<record id="account_invoice_extend_tree" model="ir.ui.view">
			<field name="name">account.invoice.extend.tree</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_tree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='date_due']" position="after">
					<field name="credit_amount" invisible="1" />
					<field name="result" invisible="1" />
				</xpath>
			</field>
		</record>
		
		

		<record id="view_partner_inherit_followup_form" model="ir.ui.view">
			<field name="name">res.partner</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<page name="sales_purchases" position='after'>
					<page string="Statements" groups="account.group_account_invoice"
						name="followup_tab">
						<div class="oe_right" name="statement_button">
							<button name="do_button_print_statement" type="object" string="Print Customer Statement" help="Print Customer Statement" attrs="{'invisible': [('customer', '=', False)]}"/>
							<button name="do_button_print_statement_vendor" type="object" string="Print Supplier Statement" help="Print Supplier Statement" attrs="{'invisible': [('supplier', '=', False)]}"/>
						</div>
						<group></group>
						<field name="balance_invoice_ids" attrs="{'invisible': [('customer', '=', False)]}">
							<tree string="Invoice line" editable="bottom" create="false" delete="false"  colors="red:(not date_due or date_due&lt;=current_date) and result&gt;0">
								<field name="date_invoice" readonly="True" />
								<field name="state" readonly="True" invisible="1"/>
								<field name="number" readonly="True" />
								<field name="company_id" readonly="True" groups="base.group_multi_company" />
								<field name="date_due" readonly="True" />
								<field name="amount_total_signed" readonly="True" string = "Invoices/Debits"/>
								<field name="credit_amount" readonly="True"  string = "Payments/Credits"/>
								<field name="result" readonly="True" string = "Balance"/>
							</tree>
						</field>
						<field name="supplier_invoice_ids" attrs="{'invisible': [('supplier', '=', False)]}">
							<tree string="Supplier Invoice line" editable="bottom" create="false" delete="false" colors="red:(not date_due or date_due&lt;=current_date) and result&gt;0">
								<field name="date_invoice" readonly="True" />
								<field name="state" readonly="True" invisible="1" />
								<field name="number" readonly="True" />
								<field name="company_id" readonly="True" groups="base.group_multi_company" />
								<field name="date_due" readonly="True" />
								<field name="amount_total_signed" readonly="True" string="Invoices/Debits" />
								<field name="credit_amount" readonly="True" string="Payments/Credits" />
								<field name="result" readonly="True" string="Balance" />
							</tree>
						</field>
					</page>
				</page>
			</field>
		</record>
		<act_window id="action_customer_wizard" name="Print Customer Statement" src_model="res.partner" res_model="customer.model.wizard" view_mode="form" target="new" multi="True"/>
	</data>
</odoo>
