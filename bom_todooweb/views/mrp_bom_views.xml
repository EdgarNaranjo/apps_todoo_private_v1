<?xml version="1.0"?>
<odoo>
    <data>
        <record id="mrp_mrp_bom_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.mrp.bom.form.view.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='bom_line_ids']/tree[1]/field[@name='product_id']" position="attributes">
                    <attribute name="widget">many2one</attribute>
                 </xpath>
            </field>
        </record>

        <record id="mrp_mrp_bom_tree_view_inherit" model="ir.ui.view">
            <field name="name">mrp.mrp.bom.tree.view.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="count_lines"/>
                </field>
            </field>
        </record>
    </data>
</odoo>