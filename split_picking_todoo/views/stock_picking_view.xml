<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="part_picking_wizard_form2">
        <field name="name">Partir Albaran</field>
        <field name="model">part.picking.wizard</field>
        <field name="arch" type="xml">
            <form>
                <h4><strong>Con el actual sistema puedes partir hasta en 6 Albaranes.</strong> Especifique el No. Albaran por cada linea.</h4>
                <group>
                    <group>
                        <field name="picking_ids" invisible="1"/>
                    </group>
                </group>
                <field name="first_part_ids">
                    <tree editable="bottom">
                        <field name="move_lines" options='{"no_create": True, "no_open": True}' invisible="1" readonly="1"/>
                        <field name="product_id" options='{"no_create": True, "no_open": True}' readonly="1"/>
                        <field name="product_qty" readonly="1"/>
                        <field name="reserved_available" readonly="1"/>
                        <field name="quantity" required="True"/>
                    </tree>
                </field>
                <footer>
                    <button type="object" name="action_part_picking" string="Partir" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_picking_form_part_inherit">
        <field name="name">stock.picking.inherit.form</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_validate']" position="after">
                <button name="action_part_picking" string="Partir" type="object" states="confirmed,assigned" class="btn-primary"/>
            </xpath>
        </field>
    </record>

</odoo>
