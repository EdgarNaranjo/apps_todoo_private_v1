<odoo>
    <data>
        <!-- View Form Distribution -->
        <record model="ir.ui.view" id="distribution_lead_form">
            <field name="name">distribution.lead.form</field>
            <field name="model">distribution.lead</field>
            <field name="arch" type="xml">
                <form string="Distribution Lead">
                    <header>
                        <button name="check_cancel" string="Cancel" type="object" class="btn-primary" attrs="{'invisible':[('state','in',['done', 'cancel'])]}"/>
                        <button name="check_draft" string="Draft" type="object" class="btn-primary" attrs="{'invisible':[('state','in',['done', 'draft', 'error'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done,error,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="New Distribution" required="True" readonly="True"/></h1>
                        </div>
                        <group>
                            <group name="first_group">
                                <field name="create_date" string="Fecha creado" readonly="1"/>
                                <field name="create_uid" string="Creado por" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Data Distribution">
                                <h3>Leads</h3>
                                <field name="lead_ids" readonly="True">
                                    <tree string="Leads" decoration-bf="message_needaction==True" decoration-muted="probability == 100" decoration-danger="activity_date_deadline and (activity_date_deadline &lt; current_date)">
                                        <field name="date_deadline" invisible="1"/>
                                        <field name="create_date"/>
                                        <field name="name" string="Opportunity"/>
                                        <field name="partner_id" string="Customer"/>
                                        <field name="activity_date_deadline"/>
                                        <field name="medium_id" invisible="1"/>
                                        <field name="campaign_id" invisible="1"/>
                                        <field name="source_id" invisible="1"/>
                                        <field name="stage_id"/>
                                        <field name="planned_revenue" sum="Expected Revenues"/>
                                        <field name="probability" avg="Avg. of Probability"/>
                                        <field name="team_id" invisible="1"/>
                                        <field name="user_id" invisible="1"/>
                                        <field name="referred" invisible="1"/>
                                        <field name="priority" invisible="1"/>
                                        <field name="message_needaction" invisible="1"/>
                                        <field name="probability" invisible="1"/>
                                        <field name="write_date" invisible="1"/>
                                    </tree>
                                </field>
                                <h3>Commercials</h3>
                                <field name="employee_ids" readonly="True"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- View Tree Distribution -->
        <record model="ir.ui.view" id="distribution_lead_tree">
            <field name="name">distribution.lead.tree</field>
            <field name="model">distribution.lead</field>
            <field name="arch" type="xml">
                <tree string="Distribution Lead" decoration-info="state == 'draft'" decoration-muted = "state in ['cancel']" decoration-danger= "state in ['error']">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- View Search Distribution -->
        <record id="distribution_lead_search" model="ir.ui.view">
          <field name="name">distribution.lead.search</field>
          <field name="model">distribution.lead</field>
          <field name="arch" type="xml">
            <search string="Distribution Lead">
                <field name="name"/>
                <field name="create_uid"/>
                <field name="state"/>
                <separator/>
                <filter string="New" domain="[('state', '=', 'draft')]" name="modelnew"/>
                <filter string="Done" domain="[('state', '=', 'done')]" name="modeldone"/>
                <filter string="Cancel" domain="[('state', '=', 'cancel')]" name="modelcancel"/>
                <filter string="Error" domain="[('state', '=', 'error')]" name="modelerror"/>
<!--                <separator/>-->
<!--                <group  expand='0' string='Group by...'>-->
<!--                  <filter string='Status' domain="[]" context="{'group_by': 'state'}"/>-->
<!--                </group>-->
            </search>
          </field>
        </record>

        <record id="action_distribution_lead" model="ir.actions.act_window">
            <field name="name">Distribution Lead</field>
            <field name="res_model">distribution.lead</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('distribution_lead_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('distribution_lead_form')})]"/>
            <field name="search_view_id" ref="distribution_lead_search"/>
            </record>

        <!-- View Form setting.employee -->
        <record model="ir.ui.view" id="setting_employee_form">
            <field name="name">setting.employee.form</field>
            <field name="model">setting.employee</field>
            <field name="arch" type="xml">
                <form string="Setting Employee">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" options='{"no_create": True, "no_open": True}'/>
                                <field name="time_working"/>
                            </group>
                            <group>
                                <field name="group_day"/>
                                <field name="available"/>
                                <field name="hour_sat"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- View Tree setting.employee -->
        <record model="ir.ui.view" id="setting_employee_tree">
            <field name="name">setting.employee.tree</field>
            <field name="model">setting.employee</field>
            <field name="arch" type="xml">
                <tree string="Setting Employee" editable="top">
                    <field name="employee_id" options='{"no_create": True, "no_open": True}'/>
                    <field name="time_working"/>
                    <field name="group_day"/>
                    <field name="hour_sat"/>
                    <field name="available"/>
                </tree>
            </field>
        </record>

        <record id="action_setting_employee" model="ir.actions.act_window">
            <field name="name">Setting Employee</field>
            <field name="res_model">setting.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('setting_employee_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('setting_employee_form')})]"/>
        </record>

        <!-- View Form relation.employee -->
        <record model="ir.ui.view" id="relation_employee_form">
            <field name="name">relation.employee.form</field>
            <field name="model">relation.employee</field>
            <field name="arch" type="xml">
                <form string="Relation Employee">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" class="oe_stat_button" icon="fa-star" name="action_view_leads">
                                <field name="lead_count" widget="statinfo" string="Leads"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="theoretical_qty"/>
                                <field name="real_qty"/>
                            </group>
                            <group>
                                <field name="time_working"/>
                                <field name="group_day"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- View Tree relation.employee -->
        <record model="ir.ui.view" id="relation_employee_tree">
            <field name="name">relation.employee.tree</field>
            <field name="model">relation.employee</field>
            <field name="arch" type="xml">
                <tree string="Relation Employee">
                    <field name="employee_id"/>
                    <field name="theoretical_qty"/>
                    <field name="real_qty"/>
                    <field name="time_working"/>
                    <field name="group_day"/>
                </tree>
            </field>
        </record>

        <!-- View Form session.users -->
        <record model="ir.ui.view" id="session_users_form">
            <field name="name">session.users.form</field>
            <field name="model">session.users</field>
            <field name="arch" type="xml">
                <form string="Session Users">
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id" options='{"no_create": True, "no_open": True}'/>
                                <field name="login"/>
                                <field name="login_date"/>
                            </group>
                            <group>
                                <field name="session_duration"/>
                                <field name="time_inactive"/>
                                <field name="status_inactive"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- View Tree session.users -->
        <record model="ir.ui.view" id="session_users_tree">
            <field name="name">session.users.tree</field>
            <field name="model">session.users</field>
            <field name="arch" type="xml">
                <tree string="Session Users" editable="top" decoration-muted="status in ['offline']" decoration-primary="status not in ['offline', 'online']">
                    <field name="user_id" options='{"no_create": True, "no_open": True}'/>
                    <field name="login" readonly="True"/>
                    <field name="login_date" invisible="True" readonly="True"/>
                    <field name="time_inactive" readonly="True"/>
                    <field name="status_inactive" readonly="True"/>
                    <field name="session_duration" readonly="True"/>
                    <field name="status" readonly="True"/>
                </tree>
            </field>
        </record>

        <record id="action_session_users" model="ir.actions.act_window">
            <field name="name">Session Users</field>
            <field name="res_model">session.users</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('session_users_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('session_users_form')})]"/>
        </record>


        <!-- View Form setting.users.gm -->
        <record model="ir.ui.view" id="setting_users_gm_form">
            <field name="name">setting.users.gm.form</field>
            <field name="model">setting.users.gm</field>
            <field name="arch" type="xml">
                <form string="Setting Users">
                    <sheet>
                        <group>
                            <group>
                                <field name="outgoing_mail_id" options='{"no_create": True, "no_open": True}'/>
                                <field name="email_from" readonly="True"/>
                            </group>
                            <group>
                                <field name="email_to"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- View Tree session.users -->
        <record model="ir.ui.view" id="setting_users_gm_tree">
            <field name="name">setting.users.gm.tree</field>
            <field name="model">setting.users.gm</field>
            <field name="arch" type="xml">
                <tree string="Setting Users">
                    <field name="outgoing_mail_id"/>
                    <field name="email_from"/>
                    <field name="email_to"/>
                </tree>
            </field>
        </record>

        <record id="action_setting_users_gm" model="ir.actions.act_window">
            <field name="name">Setting Users</field>
            <field name="res_model">setting.users.gm</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('setting_users_gm_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('setting_users_gm_form')})]"/>
        </record>

        <menuitem name="Distribution setting" id="menu_parent_distribution_lead" sequence="99"  parent="crm.crm_menu_root" groups="sales_team.group_sale_manager"/>
    <!--    <menuitem id="menu_fa_competition_tag" sequence="1" name="Competitions" parent="menu_parent_crm_faster" action="action_tag_competition" groups="sales_team.group_sale_manager"/>-->
    <!--    <menuitem id="menu_fa_crm_settings" sequence="99" name="CRM Settings" parent="menu_parent_crm_faster" action="action_crm_settings" groups="sales_team.group_sale_manager"/>-->
        <menuitem id="menu_item_distribution_settings" sequence="1" name="Distribution Lead" action="action_distribution_lead" parent="menu_parent_distribution_lead" groups="sales_team.group_sale_manager"/>
        <menuitem id="menu_item_employee_settings" sequence="99" name="Setting Employee" action="action_setting_employee" parent="menu_parent_distribution_lead" groups="sales_team.group_sale_manager"/>
        <menuitem name="Session Users" id="menu_parent_session_users" sequence="100"  parent="crm.crm_menu_root" groups="sales_team.group_sale_manager"/>
        <menuitem id="menu_item_session_users" sequence="1" name="Session Users" action="action_session_users" parent="menu_parent_session_users" groups="sales_team.group_sale_manager"/>
        <menuitem id="menu_item_session_setting_users" sequence="2" name="Setting Users" action="action_setting_users_gm" parent="menu_parent_session_users" groups="sales_team.group_sale_manager"/>
    </data>
</odoo>
