<odoo>
    <data>
        <record model="ir.ui.view" id="base_view_users_tree_inherit_tree_view">
            <field name="name">base.view.users.tree.inherit.tree.view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <field name="login_date" position="before">
                    <field name="time_inactive"/>
                    <field name="status_inactive"/>
                </field>
                <field name="login_date" position="after">
                    <field name="status"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
