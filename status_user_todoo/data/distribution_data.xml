<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="mail.channel" id="channel_distribution_lead">
        <field name="name">Distribution Lead</field>
        <field name="public">private</field>
        <field name="email_send">True</field>
        <field name="description">Info. de "Distribution Lead"</field>
        </record>

        <!-- ir cron -->
        <record id="ir_cron_action_prepare_process_distribution" model="ir.cron">
            <field name="name">Action 1: Prepare Distribution</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_distribution_lead"/>
            <field name="state">code</field>
            <field name="code">model.prepare_process_distribution()</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(minutes=30)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field eval="False" name="doall"/>
            <field name="function">True</field>
        </record>

        <record id="ir_cron_action_process_distribution" model="ir.cron">
            <field name="name">Action 2: Process Distribution</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_distribution_lead"/>
            <field name="state">code</field>
            <field name="code">model.action_process_distribution()</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(minutes=30)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field eval="False" name="doall"/>
            <field name="function">True</field>
        </record>

        <record id="ir_cron_action_check_status" model="ir.cron">
            <field name="name">Action Check Status User</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_session_users"/>
            <field name="state">code</field>
            <field name="code">model.action_check_status()</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(minutes=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field eval="False" name="doall"/>
            <field name="function">True</field>
        </record>

        <!--sequence-->
        <record id="seq_distribution_lead" model="ir.sequence">
            <field name="name">Distribution Lead</field>
            <field name="code">distribution.lead</field>
            <field name="prefix">DL/%(year)s/%(month)s/%(day)s/</field>
            <field name="padding">5</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
