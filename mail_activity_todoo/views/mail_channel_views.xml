<?xml version="1.0"?>
<odoo>
    <data>
        <record id="raps_mail_activity_view_form_popup" model="ir.ui.view">
            <field name="name">raps.mail.activity.view.form.popup</field>
            <field name="model">mail.activity</field>
            <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="not_show_channel" invisible="1"/>
                    <field name="mail_channel_id" attrs="{'invisible': [('not_show_channel', '=', True)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
