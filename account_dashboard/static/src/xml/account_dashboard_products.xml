<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="account_dashboard_products_sales_month_template">
        <div class="panel panel-default dashboard_list_name dashboard_last_box">
            <div class="panel-heading dashboard_heading_list">
                <h3 class="panel-title ad_font_info">Best selling products of the month</h3>
            </div>
            <div class="panel-body" t-if="products.length == 0">
                <p>There are no products invoiced for this month.</p>
            </div>
            <table class="table table-condensed" t-if="products.length != 0">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th>Product</th>
                        <th class="text-right">Qty</th>
                        <th class="text-right">Amount Invoiced</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="products" t-as="p">
                        <td class="text-center"><span t-esc="p.i"/></td>
                        <td><span t-esc="p.name"/></td>
                        <td class="text-right"><span t-esc="p.qty"/></td>
                        <td class="text-right"><span t-raw="formater(p.amount)"/></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>
