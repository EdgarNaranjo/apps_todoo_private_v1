<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Cron to get loss from Agora-->
        <record id="mail_template_data_filter_task_report" model="mail.template">
            <field name="name">Field Service: Task Filter Report</field>
            <field name="model_id" ref="external_services_todoo.model_project_task"/>
            <field name="check_service" eval="True"/>
            <field name="subject">{{ object.name }} Report</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="description">Email sent when clicking on "send report" in a task</field>
            <field name="body_html" type="html">
                <p>
                    Dear <t t-out="object.partner_id.name or 'Customer'">Customer</t>,<br/><br/>
                    Please find attached the worksheet for our onsite operation. <br/><br/>
                    Feel free to contact us if you have any questions.<br/><br/>
                    Best regards,<br/><br/>
                </p>
            </field>
                <field name="report_template_ids" eval="[(4, ref('external_services_todoo.task_custom_filter_report'))]"/>
            <field name="lang">{{ object.partner_id.lang }}</field>
        </record>

        <record id="industry_fsm_sale_report.worksheet_custom_page" model="ir.ui.view">
            <field name="active">False</field>
        </record>
    </data>
</odoo>
